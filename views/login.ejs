<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes bgDarken {
      0% { background-color: #f3f4f6; }
      100% { background-color: #18181b; }
    }

    .animate-fadeInUp { animation: fadeInUp 0.6s ease-out both; }
    .animate-bgDarken { animation: bgDarken 2s ease forwards; }

    .bubble {
      position: absolute;
      border-radius: 9999px;
      opacity: 0.2;
      background: #4f46e5;
      animation: bounceBubble 10s infinite alternate ease-in-out;
    }

    @keyframes bounceBubble {
      0%   { transform: translate(0, 0); }
      25%  { transform: translate(80vw, 10vh); }
      50%  { transform: translate(60vw, 80vh); }
      75%  { transform: translate(10vw, 60vh); }
      100% { transform: translate(0, 0); }
    }

    .bubble:nth-child(1) {
      width: 100px; height: 100px; top: 10%; left: 10%;
      animation-duration: 12s;
    }

    .bubble:nth-child(2) {
      width: 60px; height: 60px; top: 30%; left: 80%;
      animation-duration: 15s;
    }

    .bubble:nth-child(3) {
      width: 80px; height: 80px; top: 70%; left: 20%;
      animation-duration: 18s;
    }

    .bubble:nth-child(4) {
      width: 40px; height: 40px; top: 50%; left: 50%;
      animation-duration: 20s;
    }

    .bubble:nth-child(5) {
      width: 120px; height: 120px; top: 80%; left: 70%;
      animation-duration: 22s;
    }
  </style>
</head>
<body class="text-white overflow-hidden relative animate-bgDarken">
  <div class="absolute top-0 left-0 w-full h-full -z-10">
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
  </div>

  <div class="w-full min-h-screen flex justify-center items-center p-6">
    <div class="w-full max-w-md bg-zinc-800 p-8 rounded-xl shadow-xl transform transition-transform duration-300 hover:scale-105 animate-fadeInUp">
      <h3 class="text-3xl font-semibold mb-6 text-center text-blue-400">Login</h3>
      <form action="/login" method="post" class="flex flex-col gap-4">
        <input class="px-4 py-2 bg-transparent border border-zinc-600 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300 focus:translate-x-1" type="email" placeholder="Email" name="email" />
        <input class="px-4 py-2 bg-transparent border border-zinc-600 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none transition-all duration-300 focus:translate-x-1" type="password" placeholder="Password" name="password" />
        <input class="px-4 py-2 bg-blue-500 hover:bg-blue-600 rounded-md text-white font-medium cursor-pointer transition-all duration-300 hover:animate-pulse" type="submit" value="Login" />
      </form>
    </div>
  </div>
</body>
</html>
